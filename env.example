# AWS credentials (same account must have Bedrock access in both regions below)
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key

# Default SDK region (optional). We use per-stage regions below.
AWS_REGION=ap-south-1

# Alternative Bedrock-specific credentials (optional)
BEDROCK_ACCESS_KEY_ID=
BEDROCK_SECRET_ACCESS_KEY=
BEDROCK_REGION=ap-south-1

# Per-stage Bedrock configuration
# Image generation (Titan v1 in ap-south-1)
BEDROCK_GENERATE_REGION=ap-south-1
BEDROCK_GENERATE_MODEL_ID=amazon.titan-image-generator-v1

# Animation (Nova Reel in us-east-1)
BEDROCK_ANIMATE_REGION=us-east-1
# Comma-separated list; first will be tried first
BEDROCK_ANIMATION_MODELS=amazon.nova-reel-v1:0

# Optional: Replicate API for background cleaning (optional)
REPLICATE_API_TOKEN=your_replicate_api_token

# Per-stage Bedrock configuration
# Image generation (Titan v1) in ap-south-1
BEDROCK_GENERATE_REGION=ap-south-1
BEDROCK_GENERATE_MODEL_ID=amazon.titan-image-generator-v1
BEDROCK_GENERATE_ACCESS_KEY_ID=
BEDROCK_GENERATE_SECRET_ACCESS_KEY=

# Animation (Nova Reel) in us-east-1
BEDROCK_ANIMATE_REGION=us-east-1
# Try these in order (first available will be used)
BEDROCK_ANIMATION_MODELS=amazon.nova-reel-v1:0,amazon.nova-reel
BEDROCK_ANIMATE_ACCESS_KEY_ID=
BEDROCK_ANIMATE_SECRET_ACCESS_KEY=

# Fallbacks and logging
DISABLE_FALLBACKS=0
QUIET_LOGS=0

# Optional: Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Avalanche Blockchain Configuration
# Avalanche RPC URLs
AVALANCHE_RPC_URL=https://api.avax-test.network/ext/bc/C/rpc
AVALANCHE_MAINNET_RPC_URL=https://api.avax.network/ext/bc/C/rpc

# Avalanche Explorer URLs
AVALANCHE_EXPLORER=https://testnet.snowtrace.io
AVALANCHE_MAINNET_EXPLORER=https://snowtrace.io

# Avalanche Network Settings
AVALANCHE_NETWORK=fuji
AVALANCHE_LOGGING=true
AVALANCHE_DEBUG=false

# Icon Generation Pricing in AVAX
ICON_GENERATION_PRICE_AVAX=0.1
PRIVACY_PREMIUM_MULTIPLIER=1.5

# Smart Contract Addresses (to be deployed)
UNIICON_NFT_CONTRACT_ADDRESS=
AVAX_PAYMENTS_CONTRACT_ADDRESS=
PAYMENT_PROCESSOR_CONTRACT_ADDRESS=
EERC_TOKEN_CONTRACT_ADDRESS=

# Platform Wallet Configuration
PLATFORM_WALLET_ADDRESS=
CREATOR_WALLET_ADDRESS=

# Wallet Configuration
WALLET_PRIVATE_KEY=
WALLET_MNEMONIC=

# Feature Flags
ENABLE_PRIVACY_MODE=true
ENABLE_BATCH_PAYMENTS=true
ENABLE_REFUNDS=true

